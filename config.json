{
    "app_name": "CryptoStreamAnalyzer",
    "version": "1.0.0",
    "settings": {
        "global_threshold_percent": 0.01
    },
    "monitored_groups": [
        {
            "pairs": ["BTCUSDT", "BTCFDUSD"],
            "threshold": 0.015
        },
        {
            "pairs": ["ETHUSDT", "ETHFDUSD"],
            "threshold": 0.02
